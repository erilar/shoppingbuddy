<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/listcolor"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/header"
    android:textSize="25dp"
    android:textStyle="bold"
    android:gravity="center"
    android:textColor="@color/black"
    android:typeface="serif"
    android:paddingBottom="40dp"
    android:paddingTop="20dp"
    />
<Button android:text="@string/showItemsBtnTxt" android:id="@+id/showItemsBtn" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_margin="10dp"></Button>
<Button android:text="@string/newItemsBtnTxt" android:id="@+id/newItemsBtn" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_margin="10dp"></Button>
<Button android:text="@string/remoteItemListBtnTxt" android:id="@+id/serviceBtn" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_margin="10dp"></Button>
</LinearLayout>
