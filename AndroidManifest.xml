<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="no.andsim.recipes.activity" android:versionCode="1"
	android:versionName="1.0">
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-sdk android:minSdkVersion="10" />

	<application android:icon="@drawable/dinnerplateicon" android:label="@string/app_name"
		android:debuggable="true">
		<activity android:name=".StartActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".MenuActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="no.andsim.recipes.MENU" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".RecipeOverview" android:label="@string/app_name">
			<intent-filter>
				<action android:name="no.andsim.recipes.OVERVIEW" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".VareServiceClient" android:label="@string/app_name">
			<intent-filter>
				<action android:name="no.andsim.recipes.VARESERVICE" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".RecipeDetails"
			android:windowSoftInputMode="stateVisible|adjustResize">
			<intent-filter>
				<action android:name="no.andsim.recipes.EDIT" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
	</application>
</manifest>